<%# <%= render 'form', recipe: @recipe %>

<h1><%= form_for @recipe do |rec| %></h1>
  <%= rec.label :title %>
  <%= rec.text_field :title %><br>

  <%= rec.fields_for :ingredients do |ing| %>
    <%= ing.label :name %>
    <%= ing.text_field :name %><br>

    <%= ing.label :quantity %>
    <%= ing.text_field :quantity %><br>
  <% end %>

  <%= rec.submit %>
<% end %>
